{
  "name": "@nichoth/single-page",
  "version": "1.1.0",
  "description": "write single-page apps with a single callback to handle pushState events",
  "main": "src/index.mjs",
  "scripts": {
    "build": "node ./build.js",
    "postversion": "git push && git push --tags",
    "test": "esbuild --bundle --platform=node test/index.cjs | htmlify test/index.html | tape-run --input=html | tap-arc"
  },
  "exports": {
    "import": "./index.mjs",
    "require": "./index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/nichoth/single-page.git"
  },
  "homepage": "https://github.com/nichoth/single-page",
  "keywords": [
    "pushState",
    "single-page",
    "client-side",
    "browser"
  ],
  "contributors": [
    "James Halliday <mail@substack.net> (http://substack.net)",
    "Nick Thomas <nichoth@gmail.com> (https://nichoth.com)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nichoth/single-page/issues"
  },
  "directories": {
    "example": "example"
  },
  "devDependencies": {
    "@socketsupply/test-dom": "^0.5.0",
    "esbuild": "^0.16.7",
    "inline-htmlify": "^2.0.1",
    "tap-arc": "^0.3.5",
    "tape": "^5.6.1",
    "tape-run": "^10.0.0"
  }
}
